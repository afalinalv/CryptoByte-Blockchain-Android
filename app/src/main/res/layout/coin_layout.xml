<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:background="@color/colorDarkBlue">


        <!--CryptoCurrency Image-->
        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="56sp"
            android:layout_height="56sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30sp" />

        <!--CryptoCurrency Initials -->
        <TextView
            android:id="@+id/coin_symbol"
            android:layout_width="56sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coin_icon"
            android:layout_below="@+id/coin_icon"
            android:layout_marginTop="10sp"
            android:text="(BTC)"
            android:textAlignment="center"
            android:textColor="@color/colorTransparentWhite"
            android:textStyle="bold" />

        <!--Divider-->
        <TextView
            android:id="@+id/coin_divider"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="40sp"
            android:text="|"
            android:textAlignment="center"
            android:textColor="@color/colorCyanBlue" />

        <!--CryptoCurrency Name-->
        <TextView
            android:id="@+id/coin_name"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="40sp"
            android:text="Bitcoin"
            android:textAlignment="center"
            android:textColor="@color/colorTransparentWhite" />

        <!--CryptoCurrency Sign-->
        <TextView
            android:id="@+id/coin_sign"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="120sp"
            android:text="$"
            android:textAlignment="center"
            android:textColor="@color/colorTransparentWhite" />

        <!--CryptoCurrency Price-->
        <TextView
            android:id="@+id/priceUsdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255sp"
            android:layout_marginTop="105sp"
            android:text="USD"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="30sp" />

        <!--CryptoCurrency 1hr Watch!-->
        <TextView
            android:id="@+id/oneHourText"
            android:layout_width="20sp"
            android:layout_height="15sp"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="20sp"
            android:text="1hr"
            android:textAlignment="center"
            android:textColor="@color/colorTransparentWhite"/>


        <!--CryptoCurrency Percentage 1hr% Change -->
        <TextView
            android:id="@+id/percentChange1hText"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="20sp"
            android:textAlignment="center"/>


        <!--CryptoCurrency 24hr Watch!-->
        <TextView
            android:id="@+id/twentyFourHourText"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="24hr"
            android:textAlignment="center"
            android:textColor="@color/colorTransparentWhite"/>


        <!--CryptoCurrency Percentage 24hr% Change -->
        <TextView
            android:id="@+id/percentChange24hText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textColor="@color/colorCyanBlue" />


        <!--CryptoCurrency 7days Watch!-->
        <TextView
            android:id="@+id/sevenDayText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7d" />


        <!--CryptoCurrency Percentage 7d Change -->
        <TextView
            android:id="@+id/percentChange7dText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCyanBlue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="148sp"
            android:background="#000" />
    </RelativeLayout>


</android.support.v7.widget.CardView>